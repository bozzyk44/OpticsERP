<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_optics_prescription_tree" model="ir.ui.view">
        <field name="name">optics.prescription.tree</field>
        <field name="model">optics.prescription</field>
        <field name="arch" type="xml">
            <tree string="Prescriptions">
                <field name="patient_name"/>
                <field name="date"/>
                <field name="od_sph"/>
                <field name="od_cyl"/>
                <field name="os_sph"/>
                <field name="os_cyl"/>
                <field name="pd"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_optics_prescription_form" model="ir.ui.view">
        <field name="name">optics.prescription.form</field>
        <field name="model">optics.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="patient_name" placeholder="Patient Name"/>
                        </h1>
                    </div>

                    <group>
                        <group name="patient_info" string="Patient Information">
                            <field name="patient_id"/>
                            <field name="date"/>
                        </group>
                    </group>

                    <notebook>
                        <!-- Right Eye (OD) Tab -->
                        <page string="Right Eye (OD)" name="od">
                            <group>
                                <group string="Sphere &amp; Cylinder">
                                    <field name="od_sph"/>
                                    <field name="od_cyl"/>
                                    <field name="od_axis"/>
                                </group>
                                <group string="Addition &amp; Prism">
                                    <field name="od_add"/>
                                    <field name="prism_od"/>
                                </group>
                            </group>
                        </page>

                        <!-- Left Eye (OS) Tab -->
                        <page string="Left Eye (OS)" name="os">
                            <group>
                                <group string="Sphere &amp; Cylinder">
                                    <field name="os_sph"/>
                                    <field name="os_cyl"/>
                                    <field name="os_axis"/>
                                </group>
                                <group string="Addition &amp; Prism">
                                    <field name="os_add"/>
                                    <field name="prism_os"/>
                                </group>
                            </group>
                        </page>

                        <!-- Pupillary Distance Tab -->
                        <page string="Pupillary Distance" name="pd">
                            <group>
                                <group string="Binocular PD">
                                    <field name="pd"/>
                                </group>
                                <group string="Monocular PD">
                                    <field name="pd_right"/>
                                    <field name="pd_left"/>
                                </group>
                            </group>
                        </page>

                        <!-- Notes Tab -->
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes or special instructions..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_optics_prescription_search" model="ir.ui.view">
        <field name="name">optics.prescription.search</field>
        <field name="model">optics.prescription</field>
        <field name="arch" type="xml">
            <search string="Search Prescriptions">
                <field name="patient_name" string="Patient"
                       filter_domain="[('patient_name', 'ilike', self)]"/>
                <field name="patient_id"/>
                <field name="date"/>

                <filter string="Active" name="active"
                        domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive"
                        domain="[('active', '=', False)]"/>

                <separator/>
                <filter string="This Month" name="this_month"
                        domain="[('date', '&gt;=', (context_today() - relativedelta(months=1)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Year" name="this_year"
                        domain="[('date', '&gt;=', time.strftime('%Y-01-01'))]"/>

                <group expand="0" string="Group By">
                    <filter string="Patient" name="group_patient"
                            context="{'group_by': 'patient_id'}"/>
                    <filter string="Date" name="group_date"
                            context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_optics_prescription" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">optics.prescription</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first prescription
            </p>
            <p>
                Optical prescriptions specify lens parameters (Sph, Cyl, Axis, Add, PD)
                for manufacturing orders.
            </p>
        </field>
    </record>

</odoo>
