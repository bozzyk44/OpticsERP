<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Profile Tree View -->
    <record id="view_connector_import_profile_tree" model="ir.ui.view">
        <field name="name">connector.import.profile.tree</field>
        <field name="model">connector.import.profile</field>
        <field name="arch" type="xml">
            <tree string="Import Profiles" decoration-muted="not active">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="supplier_id"/>
                <field name="file_format"/>
                <field name="upsert_field"/>
                <field name="job_count"/>
                <field name="last_import_date"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- Import Profile Form View -->
    <record id="view_connector_import_profile_form" model="ir.ui.view">
        <field name="name">connector.import.profile.form</field>
        <field name="model">connector.import.profile</field>
        <field name="arch" type="xml">
            <form string="Import Profile">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_import_jobs" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="job_count" widget="statinfo" string="Import Jobs"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="e.g., Essilor Price List"/>
                        </h1>
                    </div>

                    <group>
                        <group name="basic_info" string="Basic Information">
                            <field name="supplier_id" options="{'no_create': True}"/>
                            <field name="supplier_code"/>
                            <field name="sequence"/>
                        </group>
                        <group name="stats" string="Statistics">
                            <field name="last_import_date" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page name="file_settings" string="File Settings">
                            <group>
                                <group name="format" string="File Format">
                                    <field name="file_format" widget="radio"/>
                                    <field name="csv_delimiter" invisible="file_format not in ('csv_utf8', 'csv_cp1251')"/>
                                    <field name="csv_quote_char" invisible="file_format not in ('csv_utf8', 'csv_cp1251')"/>
                                </group>
                                <group name="rows" string="Row Configuration">
                                    <field name="header_row"/>
                                    <field name="data_start_row"/>
                                    <field name="skip_empty_rows"/>
                                </group>
                            </group>
                        </page>

                        <page name="column_mapping" string="Column Mapping">
                            <group>
                                <field name="column_mapping" widget="ace" options="{'mode': 'json'}" nolabel="1"/>
                            </group>
                            <group>
                                <p class="text-muted">
                                    <strong>Example Mapping:</strong><br/>
                                    <pre>{
  "default_code": "SKU",
  "name": "Product Name",
  "list_price": "Price",
  "standard_price": "Cost",
  "qty_available": "Stock",
  "barcode": "Barcode",
  "categ_id": "Category"
}</pre>
                                    <strong>Supported Odoo Fields:</strong><br/>
                                    - default_code (Product Code)<br/>
                                    - name (Product Name)<br/>
                                    - list_price (Sales Price)<br/>
                                    - standard_price (Cost Price)<br/>
                                    - qty_available (Stock Quantity)<br/>
                                    - barcode (Barcode)<br/>
                                    - categ_id (Product Category)<br/>
                                </p>
                            </group>
                        </page>

                        <page name="upsert_settings" string="Upsert Settings">
                            <group>
                                <group name="upsert_field" string="Matching">
                                    <field name="upsert_field" widget="radio"/>
                                </group>
                                <group name="upsert_actions" string="Actions">
                                    <field name="create_missing"/>
                                    <field name="update_existing"/>
                                </group>
                            </group>
                            <group>
                                <p class="text-muted">
                                    <strong>Upsert Field:</strong> Field used to match existing products.<br/>
                                    <strong>Create Missing:</strong> Create new products if not found.<br/>
                                    <strong>Update Existing:</strong> Update existing products if found.<br/>
                                </p>
                            </group>
                        </page>

                        <page name="validation" string="Validation">
                            <group>
                                <field name="validation_rules" widget="ace" options="{'mode': 'json'}" nolabel="1" placeholder='{"required_fields": ["default_code", "name"], "min_price": 0}'/>
                            </group>
                        </page>

                        <page name="notes" string="Notes">
                            <field name="notes" placeholder="Additional notes about this import profile..." nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Import Profile Search View -->
    <record id="view_connector_import_profile_search" model="ir.ui.view">
        <field name="name">connector.import.profile.search</field>
        <field name="model">connector.import.profile</field>
        <field name="arch" type="xml">
            <search string="Search Import Profiles">
                <field name="name" string="Profile Name"/>
                <field name="supplier_id"/>
                <field name="supplier_code"/>

                <separator/>

                <filter name="filter_active" string="Active" domain="[('active', '=', True)]"/>
                <filter name="filter_inactive" string="Inactive" domain="[('active', '=', False)]"/>

                <separator/>

                <filter name="filter_xlsx" string="Excel (XLSX)" domain="[('file_format', '=', 'xlsx')]"/>
                <filter name="filter_csv" string="CSV" domain="[('file_format', 'in', ['csv_utf8', 'csv_cp1251'])]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter name="group_supplier" string="Supplier" context="{'group_by': 'supplier_id'}"/>
                    <filter name="group_format" string="File Format" context="{'group_by': 'file_format'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Import Profile Action -->
    <record id="action_connector_import_profile" model="ir.actions.act_window">
        <field name="name">Import Profiles</field>
        <field name="res_model">connector.import.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Import Profile
            </p>
            <p>
                Import profiles define how to import supplier catalogs from Excel/CSV files.
                Configure column mapping, file format, and upsert settings.
            </p>
        </field>
    </record>

</odoo>
