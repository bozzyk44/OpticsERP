<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Import Wizard Form View -->
    <record id="view_connector_import_wizard_form" model="ir.ui.view">
        <field name="name">connector.import.wizard.form</field>
        <field name="model">connector.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Supplier Catalog">
                <sheet>
                    <group>
                        <group name="profile" string="Import Configuration">
                            <field name="profile_id" options="{'no_create': True}"/>
                        </group>
                        <group name="file" string="File Upload">
                            <field name="file_name" invisible="1"/>
                            <field name="file_data" filename="file_name" widget="binary"/>
                        </group>
                    </group>

                    <group name="preview" string="Preview (First 10 Rows)" invisible="not show_preview">
                        <field name="preview_data" nolabel="1" widget="text"/>
                        <field name="show_preview" invisible="1"/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_preview" string="Preview" type="object" class="btn-secondary" invisible="show_preview"/>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button name="action_cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Import Wizard Action -->
    <record id="action_connector_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Supplier Catalog</field>
        <field name="res_model">connector.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item for Wizard -->
    <menuitem id="menu_connector_import_wizard"
              name="Import Catalog"
              parent="connector_b.menu_connector_root"
              action="action_connector_import_wizard"
              sequence="5"/>

</odoo>
