# Chrony NTP configuration for OpticsERP
# Generated by Ansible - DO NOT EDIT MANUALLY

# NTP servers
{% for server in ntp_servers %}
server {{ server }} iburst
{% endfor %}

# Allow large time adjustments
makestep 1.0 3

# Record system clock drift
driftfile /var/lib/chrony/chrony.drift

# Log directory
logdir /var/log/chrony

# Allow NTP client access from local network (if needed)
# allow 192.168.0.0/16

# Serve time even if not synchronized to a time source
local stratum 10

# Key file for NTP authentication
keyfile /etc/chrony/chrony.keys

# Specify the maximum correction
maxchange 1000 1 2

# RTC sync
rtcsync
