# Prometheus configuration for OpticsERP
# Generated by Ansible - DO NOT EDIT MANUALLY

global:
  scrape_interval: {{ prometheus_scrape_interval }}
  evaluation_interval: {{ prometheus_evaluation_interval }}
  external_labels:
    cluster: 'opticserp'
    environment: '{{ deployment_env }}'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets: []

# Load rules
rule_files:
  - 'alert_rules.yml'

# Scrape configurations
scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  # KKT Adapter metrics
  - job_name: 'kkt_adapter'
    static_configs:
      - targets:
{% for host in groups['kkt_adapters'] | default([]) %}
        - '{{ hostvars[host].ansible_host }}:{{ kkt_adapter_port }}'
{% endfor %}
    relabel_configs:
      - source_labels: [__address__]
        target_label: instance
      - source_labels: [__address__]
        regex: '([^:]+):.*'
        target_label: pos_location
        replacement: '${1}'

  # Odoo metrics (via node_exporter)
  - job_name: 'odoo_servers'
    static_configs:
      - targets:
{% for host in groups['odoo_servers'] | default([]) %}
        - '{{ hostvars[host].ansible_host }}:9100'
{% endfor %}

  # PostgreSQL metrics (via postgres_exporter)
  - job_name: 'postgresql'
    static_configs:
      - targets:
{% for host in groups['db_servers'] | default([]) %}
        - '{{ hostvars[host].ansible_host }}:9187'
{% endfor %}

  # Redis metrics (via redis_exporter)
  - job_name: 'redis'
    static_configs:
      - targets:
{% for host in groups['db_servers'] | default([]) %}
        - '{{ hostvars[host].ansible_host }}:9121'
{% endfor %}
