# Prometheus alert rules for OpticsERP
# Generated by Ansible - DO NOT EDIT MANUALLY

groups:
  - name: opticserp_critical
    interval: 30s
    rules:
      # P1: Buffer overflow
      - alert: KKTBufferFull
        expr: kkt_buffer_percent_full >= 100
        for: 1m
        labels:
          severity: critical
          priority: P1
        annotations:
{% raw %}
          summary: "KKT buffer full on {{ $labels.instance }}"
          description: "Buffer is at {{ $value }}% capacity. Sales may fail!"
{% endraw %}

      # P1: Fiscal memory full
      - alert: FiscalMemoryFull
        expr: kkt_fiscal_memory_days_left <= 3
        for: 5m
        labels:
          severity: critical
          priority: P1
        annotations:
{% raw %}
          summary: "Fiscal memory almost full on {{ $labels.instance }}"
          description: "Only {{ $value }} days left in fiscal memory. Replacement needed urgently!"
{% endraw %}

      # P2: Buffer warning
      - alert: KKTBufferWarning
        expr: kkt_buffer_percent_full >= 80
        for: 5m
        labels:
          severity: warning
          priority: P2
        annotations:
{% raw %}
          summary: "KKT buffer high on {{ $labels.instance }}"
          description: "Buffer is at {{ $value }}% capacity"
{% endraw %}

      # P2: Circuit breaker open
      - alert: CircuitBreakerOpen
        expr: kkt_circuit_breaker_state == 2
        for: 5m
        labels:
          severity: warning
          priority: P2
        annotations:
{% raw %}
          summary: "Circuit breaker OPEN on {{ $labels.instance }}"
          description: "OFD connection failed repeatedly. System in offline mode."
{% endraw %}

      # Service down
      - alert: ServiceDown
        expr: up == 0
        for: 2m
        labels:
          severity: critical
          priority: P1
        annotations:
{% raw %}
          summary: "Service {{ $labels.job }} down on {{ $labels.instance }}"
          description: "Service has been down for more than 2 minutes"
{% endraw %}

      # High CPU usage
      - alert: HighCPUUsage
        expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 80
        for: 10m
        labels:
          severity: warning
          priority: P2
        annotations:
{% raw %}
          summary: "High CPU usage on {{ $labels.instance }}"
          description: "CPU usage is {{ $value }}%"
{% endraw %}

      # High memory usage
      - alert: HighMemoryUsage
        expr: (1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100 > 85
        for: 10m
        labels:
          severity: warning
          priority: P2
        annotations:
{% raw %}
          summary: "High memory usage on {{ $labels.instance }}"
          description: "Memory usage is {{ $value }}%"
{% endraw %}

      # Disk space low
      - alert: DiskSpaceLow
        expr: (1 - (node_filesystem_avail_bytes{mountpoint="/"} / node_filesystem_size_bytes{mountpoint="/"})) * 100 > 85
        for: 5m
        labels:
          severity: warning
          priority: P2
        annotations:
{% raw %}
          summary: "Low disk space on {{ $labels.instance }}"
          description: "Disk usage is {{ $value }}%"
{% endraw %}
