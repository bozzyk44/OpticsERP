# Virtual host for Odoo with WebSocket support
# Generated by Ansible - DO NOT EDIT MANUALLY

upstream odoo_backend {
    server localhost:{{ odoo_port }};
    keepalive 32;
}

upstream odoo_longpolling {
    server localhost:{{ odoo_longpolling_port }};
    keepalive 32;
}

map $http_upgrade $connection_upgrade {
    default upgrade;
    ''      close;
}

server {
    listen {{ nginx_listen_port | default(80) }};
    server_name {{ nginx_server_name }};

    # Logging
    access_log /var/log/nginx/{{ nginx_server_name }}_access.log main;
    error_log /var/log/nginx/{{ nginx_server_name }}_error.log;

    # Client settings
    client_max_body_size {{ nginx_client_max_body_size }};

    # Gzip compression
    gzip on;
    gzip_types text/css text/plain text/xml application/xml application/javascript application/json;

    # WebSocket endpoint
    location /websocket {
        proxy_pass http://odoo_longpolling;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
    }

    # Longpolling (fallback for older clients)
    location /longpolling {
        proxy_pass http://odoo_longpolling;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_read_timeout 86400;
    }

    # Main Odoo application
    location / {
        proxy_pass http://odoo_backend;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_redirect off;
        proxy_read_timeout 600;
        proxy_connect_timeout 60;
    }

    # Static files caching
    location ~* /web/static/ {
        proxy_pass http://odoo_backend;
        proxy_cache_valid 200 90m;
        proxy_buffering on;
        expires 864000;
        add_header Cache-Control "public";
    }

    # Health check endpoint
    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
}
