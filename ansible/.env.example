# Environment variables for Ansible deployment
# Copy to .env and configure
# IMPORTANT: .env is in .gitignore - DO NOT commit!

# PostgreSQL
export POSTGRES_PASSWORD='your_strong_postgres_password_here'

# Redis
export REDIS_PASSWORD='your_redis_password_here'

# Grafana
export GRAFANA_PASSWORD='your_grafana_admin_password_here'

# Odoo
export ODOO_ADMIN_PASSWORD='your_odoo_master_password_here'

# Load before running Ansible:
# source .env
# ansible-playbook -i inventories/production/hosts.yml site.yml
